{% extends 'admin/base-admin.html.twig' %}

{% block title %}Doctor List{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="mb-4">ü©∫ Doctor Management</h1>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0">Doctor List</h5>
                <a href="{{ path('app_doctor_new') }}" class="btn btn-primary btn-sm">
                    ‚ûï Add New Doctor
                </a>
            </div>

            <!-- ‚úÖ Simple Bootstrap table that works both empty and with data -->
            {% if doctors is not empty %}
                <!-- When there's data, use DataTables -->
                <table id="doctorTable" class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Specialization</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for doctor in doctors %}
                        <tr>
                            <td>{{ doctor.id }}</td>
                            <td>{{ doctor.name }}</td>
                            <td>{{ doctor.specialization }}</td>
                            <td>{{ doctor.contact }}</td>
                            <td>{{ doctor.email }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_doctor_show', {'id': doctor.id}) }}" class="btn btn-sm btn-info text-white me-1">
                                    üëÅÔ∏è View
                                </a>
                                <a href="{{ path('app_doctor_edit', {'id': doctor.id}) }}" class="btn btn-sm btn-warning text-white">
                                    ‚úèÔ∏è Edit
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <!-- When empty, show a simple table without DataTables -->
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Specialization</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <div class="py-3">
                                    <i class="bi bi-person-x" style="font-size: 2rem; color: #6c757d;"></i>
                                    <p class="mt-2 mb-0">No doctors found</p>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
