{% extends 'admin/base-admin.html.twig' %}

{% block title %}Patient List{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="mb-4">ğŸ§ Patient Management</h1>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0">Patient List</h5>
                <a href="{{ path('app_patient_new') }}" class="btn btn-primary btn-sm">
                    â• Add New Patient
                </a>
            </div>

            <!-- âœ… Simple Bootstrap table that works both empty and with data -->
            {% if patients is not empty %}
                <!-- When there's data, use DataTables -->
                <table id="patientTable" class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Contact</th>
                            <th>Gender</th>
                            <th>Age</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for patient in patients %}
                        <tr>
                            <td>{{ patient.id }}</td>
                            <td>{{ patient.name }}</td>
                            <td>{{ patient.email }}</td>
                            <td>{{ patient.address }}</td>
                            <td>{{ patient.contact }}</td>
                            <td>{{ patient.gender }}</td>
                            <td>{{ patient.age }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_patient_show', {'id': patient.id}) }}" class="btn btn-sm btn-info text-white me-1">
                                    ğŸ‘ï¸ View
                                </a>
                                <a href="{{ path('app_patient_edit', {'id': patient.id}) }}" class="btn btn-sm btn-warning text-white">
                                    âœï¸ Edit
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <!-- When empty, show a simple table without DataTables -->
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Contact</th>
                            <th>Gender</th>
                            <th>Age</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <div class="py-3">
                                    <i class="bi bi-person-x" style="font-size: 2rem; color: #6c757d;"></i>
                                    <p class="mt-2 mb-0">No patients found</p>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
