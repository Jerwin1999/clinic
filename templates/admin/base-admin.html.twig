<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin Dashboard{% endblock %}</title>

    <!-- ✅ Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- ✅ DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.5/css/dataTables.dataTables.css">

    <!-- ✅ Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
        }

        .sidebar {
            width: 240px;
            height: 100vh;
            background: linear-gradient(180deg, #212529 0%, #1a1e21 100%);
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            box-shadow: 3px 0 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar h3 {
            text-align: center;
            padding: 20px;
            border-bottom: 1px solid #2c3034;
            margin: 0;
            background-color: #343a40;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .nav-link {
            color: #dee2e6;
            padding: 14px 20px;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .nav-link i {
            width: 20px;
            text-align: center;
            font-size: 1.1rem;
        }

        .nav-link:hover {
            background-color: #2c3034;
            color: white;
            border-left-color: #0d6efd;
            padding-left: 25px;
        }

        .nav-link.active {
            background-color: #2c3034;
            color: white;
            border-left-color: #0d6efd;
            font-weight: 500;
        }

        .sidebar .nav-top {
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .sidebar .nav-bottom {
            display: flex;
            flex-direction: column;
            padding: 0;
            border-top: 1px solid #2c3034;
        }

        .user-info {
            padding: 20px;
            background-color: #2c3034;
            border-bottom: 1px solid #495057;
        }

        .user-name {
            font-weight: 600;
            color: white;
            margin-bottom: 5px;
            font-size: 1rem;
        }

        .user-role {
            font-size: 0.8rem;
            color: #adb5bd;
            background-color: #495057;
            padding: 4px 12px;
            border-radius: 12px;
            display: inline-block;
            font-weight: 500;
        }

        .content {
            margin-left: 240px;
            padding: 30px;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .sidebar nav {
            padding-top: 10px;
        }

        /* Active link detection */
        .nav-link[href*="{{ app.request.get('_route') }}"] {
            background-color: #2c3034;
            color: white;
            border-left-color: #0d6efd;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <!-- ✅ Sidebar -->
    <div class="sidebar">
        <div class="nav-top">
            <h3> Clinic Admin</h3>
            <nav class="nav flex-column">
                <a class="nav-link" href="{{ path('app_dashboard') }}">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
                <a class="nav-link" href="{{ path('app_user_index') }}">
                    <i class="bi bi-people"></i>
                    <span>Users</span>
                </a>
                <a class="nav-link" href="{{ path('app_doctor_index') }}">
                    <i class="bi bi-heart-pulse"></i>
                    <span>Doctors</span>
                </a>
                <a class="nav-link" href="{{ path('app_patient_index') }}">
                    <i class="bi bi-person-badge"></i>
                    <span>Patients</span>
                </a>
                <a class="nav-link" href="{{ path('app_appointment_index') }}">
                    <i class="bi bi-calendar-check"></i>
                    <span>Appointments</span>
                </a>
                <a class="nav-link" href="{{ path('app_activity_log_index') }}">
                    <i class="bi bi-clock-history"></i>
                    <span>Activity Log</span>
                </a>
            </nav>
        </div>
        
        <div class="nav-bottom">
            <!-- User Info Section -->
            <div class="user-info">
                <div class="user-name">{{ app.user ? app.user.username : 'User' }}</div>
                <div class="user-role">
                    {% if app.user %}
                        {% set role = app.user.roles|first %}
                        {{ role|replace({'ROLE_': ''})|title }}
                    {% else %}
                        Unknown Role
                    {% endif %}
                </div>
            </div>
            
            <!-- Logout Button -->
            <a class="nav-link" href="{{ path('app_logout') }}">
                <i class="bi bi-box-arrow-right"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <!-- ✅ Main Content -->
    <div class="content">
        {% block body %}{% endblock %}
    </div>

    <!-- ✅ jQuery (Required for DataTables) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    <!-- ✅ Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- ✅ DataTables JS -->
    <script src="https://cdn.datatables.net/2.3.5/js/dataTables.js"></script>

    <!-- ✅ Conditional DataTable Init -->
    <script>
        $(document).ready(function() {
            // Initialize DataTable only if table has data rows
            function initializeDataTable(tableId) {
                const $table = $(`#${tableId}`);
                
                // Check if table exists and has at least one data row
                if ($table.length) {
                    const $tbody = $table.find('tbody');
                    const $dataRows = $tbody.find('tr').filter(function() {
                        return $(this).find('td').length > 0 && 
                               !$(this).is(':empty') && 
                               !$(this).hasClass('no-data-row');
                    });
                    
                    // Only initialize if there are actual data rows
                    if ($dataRows.length > 0) {
                        try {
                            return $table.DataTable({
                                paging: true,
                                searching: true,
                                ordering: true,
                                responsive: true,
                                pageLength: 10,
                                language: {
                                    emptyTable: "No data available",
                                    zeroRecords: "No matching records found",
                                    info: "Showing _START_ to _END_ of _TOTAL_ entries",
                                    infoEmpty: "No entries available",
                                    lengthMenu: "Show _MENU_ entries",
                                    search: "Search:"
                                }
                            });
                        } catch (error) {
                            console.warn(`Could not initialize DataTable for #${tableId}:`, error);
                        }
                    } else {
                        // For empty tables, don't initialize DataTables
                        $tbody.html('<tr class="no-data-row"><td colspan="' + $table.find('thead th').length + '" class="text-center text-muted py-4">No data available</td></tr>');
                    }
                }
                return null;
            }
            
            // Initialize specific tables if they exist and have data
            const tables = ['doctorTable', 'userTable', 'patientTable', 'appointmentTable', 'activityLogTable'];
            tables.forEach(tableId => initializeDataTable(tableId));
            
            // Handle tables with 'datatable' class
            $('.datatable').each(function() {
                const $table = $(this);
                const $tbody = $table.find('tbody');
                const $dataRows = $tbody.find('tr').filter(function() {
                    return $(this).find('td').length > 0 && !$(this).is(':empty');
                });
                
                if ($dataRows.length > 0) {
                    try {
                        $table.DataTable({
                            paging: true,
                            searching: true,
                            ordering: true,
                            responsive: true,
                            pageLength: 10
                        });
                    } catch (error) {
                        console.warn('Could not initialize DataTable:', error);
                    }
                } else {
                    $tbody.html('<tr><td colspan="' + $table.find('thead th').length + '" class="text-center text-muted py-4">No data available</td></tr>');
                }
            });
        });
    </script>

    {% block javascripts %}{% endblock %}
</body>
</html>