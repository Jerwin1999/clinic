{% extends 'admin/base-admin.html.twig' %}

{% block title %}Appointment List{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="mb-4">üìÖ Appointment Management</h1>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0">Appointment List</h5>
                <a href="{{ path('app_appointment_new') }}" class="btn btn-primary btn-sm">
                    ‚ûï Add New Appointment
                </a>
            </div>

            <!-- ‚úÖ Simple Bootstrap table that works both empty and with data -->
            {% if appointments is not empty %}
                <!-- When there's data, use DataTables -->
                <table id="appointmentTable" class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Reason</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for appointment in appointments %}
                        <tr>
                            <td>{{ appointment.id }}</td>
                            <td>{{ appointment.date ? appointment.date|date('Y-m-d H:i') : '' }}</td>
                            <td>{{ appointment.reason }}</td>
                            <td>
                                {% if appointment.status == 'Pending' %}
                                    <span class="badge bg-warning text-dark">Pending</span>
                                {% elseif appointment.status == 'Approved' %}
                                    <span class="badge bg-success">Approved</span>
                                {% elseif appointment.status == 'Cancelled' %}
                                    <span class="badge bg-danger">Cancelled</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ appointment.status }}</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_appointment_show', {'id': appointment.id}) }}" class="btn btn-sm btn-info text-white me-1">
                                    üëÅÔ∏è View
                                </a>
                                <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}" class="btn btn-sm btn-warning text-white">
                                    ‚úèÔ∏è Edit
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <!-- When empty, show a simple table without DataTables -->
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Reason</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <div class="py-3">
                                    <i class="bi bi-calendar-x" style="font-size: 2rem; color: #6c757d;"></i>
                                    <p class="mt-2 mb-0">No appointments found</p>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Only initialize DataTable if the appointmentTable exists (meaning we have data)
        const table = document.querySelector('#appointmentTable');
        if (table) {
            new DataTable(table, {
                paging: true,
                searching: true,
                ordering: true,
                responsive: true,
                pageLength: 10,
                language: {
                    search: "Search appointments:",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ appointments",
                    zeroRecords: "No matching appointments found"
                }
            });
        }
    });
</script>
{% endblock %}